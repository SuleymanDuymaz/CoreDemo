@using X.PagedList
@using X.PagedList.Mvc.Core 


@model IPagedList<EntityLayer.Concrete.Category>    



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Durumu</th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
         <td>@item.Id</td>
         <td>@item.CategoryName</td>
        @if (item.CategoryStatus==true)
        {
            <td>Aktif</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.Id/" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?')"
                   class="btn btn-danger">Pasif Yap</a></td>
        }
        else
        {
                <td>Pasif</td>
                <td><a href="/Admin/Category/DeleteCategory/@item.Id/" class="btn btn-primary">Aktif Yap</a></td>
        }

    </tr>

    }
</table>
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
<a href="/Admin/Category/CategoryAdd/" class="btn btn-primary">Yeni Blog</a>