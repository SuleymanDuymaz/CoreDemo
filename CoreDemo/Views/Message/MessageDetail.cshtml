@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detay </h1>

@Html.Label("MesajID")
@Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })
<br />
@Html.Label("Mesaj içeriği")
@Html.TextAreaFor(x => x.MessageContent, 15, 3, new { @class = "form-control" })
<br />
<a href="/Message/SendMessage/" class="btn btn-outline-info col-12">Yeni Mesaj Oluştur</a>
