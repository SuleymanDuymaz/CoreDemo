@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">

    <h4>Yorumlar</h4>
    @if (Model.Count() < 1)
    {
        <font color="#ff0000"> Henüz herhangi bir yorum girilmeniş. İlk yorum yapan sen ol!  </font>
    }
    @foreach (var item in Model)
    {


        <div class="media">
            <img src="/CoreBlogDemo/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>

                <div class="media mt-3">
                    <a class="d-flex pr-3" href="#">
                        <img src="/CoreBlogDemo/images/t2.jpg" alt="" class="img-fluid" />
                    </a>
                    <div class="media-body">

                    </div>
                </div>
            </div>
        </div>
    }
</div>