@model UserSignUpViewModel
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @*<form action="#" method="post">*@
                @using (Html.BeginForm("Index", "RegisterUser", FormMethod.Post))
                {

                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom01">Adınız Soyadınız</label>
                        
                        @*<input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">*@
                        @Html.TextBoxFor(p => p.NameSurname, new { @class = "form-control" })
                        <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom02">Mail Adresi</label>

                        @Html.TextBoxFor(p => p.Mail, new { @class = "form-control" })
                        <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                        @*<input type="text" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">*@
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="validationCustom02">Kullanıcı Adı</label>

                        @Html.TextBoxFor(p => p.UserName, new { @class = "form-control" })
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>


                    </div>
                </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            
                            @Html.PasswordFor(p => p.Password, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            @*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre Tekrar</label>

                            @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control" })
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                            @*<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#">Okudum,kabul ediyorum.</a>
                    </p>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                }
                @*</form>*@

            </div>
        </div>
    </div>
    <br />
    @*<button class="btn btn-info" id="btn1">Button1</button>*@
    <script>
        $('#btn1').click(function () {
            swal("Good job!", "You clicked the button!", "success");
        })
    </script>
</section>

