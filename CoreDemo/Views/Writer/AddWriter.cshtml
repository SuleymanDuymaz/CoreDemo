@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "AddWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<form class=" form-group" method="post" enctype="multipart/form-data">
    @using (Html.BeginForm("EditProfile", "Writer", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Profili Düzenle</h4>
                    @*<p class="card-description"> Basic form elements </p>*@
                    <br />
                    @Html.HiddenFor(p => p.WriterID, new { @class = "form-control" })
                    <div class="forms-sample">
                        <div class="form-group">
                            <label for="exampleInputName1">Name</label>
                            <input type="text" class="form-control" id="exampleInputName1" name="WriterName" placeholder="Name">
                            @*@Html.TextBoxFor(p => p.WriterName, new { @class = "form-control" })*@

                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail3" name="WriterMail" placeholder="Email">
                            @*@Html.TextBoxFor(p => p.WriterMail, new { @class = "form-control" })*@
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword4" name="WriterPassword" placeholder="Password">
                            @*@Html.TextBoxFor(p => p.WriterPassword, new { @class = "form-control" })*@
                        </div>

                        <div class="form-group">
                            <label for="exampleInputCity1">Fotoğraf Yolu</label>
                            <input type="file" class="form-control" name="WriterImage" />
                        </div>
                        <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

    }


</form>

